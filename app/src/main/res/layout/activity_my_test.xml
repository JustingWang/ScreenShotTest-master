<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/My_Layout"
    tools:context="com.example.zhongyu.screenshottest.MyTest">
    <com.example.zhongyu.screenshottest.TuyaView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF5B5B"
        android:id="@+id/tuya_test"/>
    <Button
        android:text="撤销"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btu_test"/>

    <Button
        android:text="恢复"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btu_back"/>
    <Button
        android:text="清空"
        android:layout_marginTop="160dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btu_clear"/>
</RelativeLayout>
